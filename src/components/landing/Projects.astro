---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
  {
    url: "/dateofbirth",
    title: "Date of Birth Seven-Segment Display",
    description:
      "Using truth tables, K-Maps, and boolean algebra to display my date of birth on a seven-segment display. ",
  },
  {
    url: "/appdesign",
    title: "Code Studio Movie Recommendation App",
    description:
      "Generates four movie recommendations based off of the user's input of genre and well-known movies within that genre.",
  },
  {
    url: "/gliderdesign",
    title: "Glider Design",
    description:
      "Modeled and constructed a glider that can launch, fly, and land without significant harm to it's structure. Won the contest and flew the longest distance!",
  },
  {
    url: "/chairdesign",
    title: "Chair Design",
    description:
      "Human-centered chair design modeled using Fusion360 AutoCAD.",
  },
  // Add more projects as needed...
];

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto">
    <div class="space-y-1">
      <!-- Section Title and Decorative Elements -->
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
     
        <span class="font-extra-bold">Projects</span>
      </h3>
    </div>

    <ul
      class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary lg:grid-cols-4 items-start gap-6 mt-megan"
      role="list"
    >
      {
        otherprojects.map((project, index) => (
          <li
            class="flow-root h-full "
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
          >
            <a href={project.url}>
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="m-hover group-hover:text-secondary/70 text-secondary text-megan font-black lg:rotate-90 xl:-translate-x-32 lg:-translate-x-20 lg:mb-8 xl:mb-0  lg:pb-8">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-xl  mt-3 indent-9">{project.description}</p>
                </div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
